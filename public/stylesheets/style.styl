/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #0000ff
background-color = #faf9f0

body
  font-family 'Georgia'
  background-color background-color
  color #444

tabs
  top 30
  width 100%
  position fixed

.header
  top 0
  font-family 'Quicksand'
  padding 5px 30px
  color #fff
  width 100%
  font-size 25px
  text-align left
  position fixed

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  width 100%-50px
  margin 50px 50px
  //background-color #0
  overflow hidden
  h1
    font-family 'Quicksand'
    position relative
    margin-top 25%
    width 100%
    font-size 32px
  h2
    font-family 'Quicksand'
    position relative
    width 100%
    margin-top 20px
    font-size 18px
.page-content
  width 100%
  height 100%
  h1
    font-family 'Quicksand'
    font-size 24px
    
  p
    margin-bottom 30px

.main-content
  float left
  width 300px
  
  h1
    left 0
    margin-top 15px
    position relative
    font-family 'Quicksand'
    font-size 24px
    
  p
    margin-bottom 30px

.sidebar
  top 70px
  right 30px
  width 200px
  //margin 25px 0px
  position fixed
  background-color #0000ff

  .widget

    /*
     * Note the lack of vendor
     * prefixes here. Nib will
     * add them for us
     */
    border-radius 3px
    border 1px solid #ccc
    margin-left 20px
    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    h1
      font-family 'Quicksand'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px
    p
      font-size 13px
      padding 0px 10px
      margin-bottom 10px

p
  line-height 1.8
  
.fade-in
    display none

.footer
  width 100%
  margin 0px 0px
  border-top 1px dotted #ccc
  padding-top 5px
  padding-left 25px
  font-size 13px
  bottom 0px
  color #fff
  background-color #1010ff
  position fixed